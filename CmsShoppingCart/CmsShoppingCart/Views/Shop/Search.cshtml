@model IEnumerable<CmsShoppingCart.Models.Data.ProductDTO>


@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-info">
    <div class="panel-heading"><h1>Search Results</h1></div>
    <div class="row panel-body" style="margin-right:-62px;">

        @foreach (var subItem in Model)
            {
            <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px; height:424px;  background-color: #fdf7f7;">
                <img src="/Images/Uploads/Products/@subItem.Id/Thumbs/@subItem.ImageName" />
                <h3>@Html.DisplayFor(modelItem => subItem.Name)</h3>
                <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.Description).ToString()))</h5>

                <a href="/shop/product-details/@subItem.Slug" class="btn btn-primary">Details</a>


            </div>
        }
    </div>
</div>

